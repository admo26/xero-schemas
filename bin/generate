]);



$api = $accounting_api;


$swagger = new Swagger();
$swagger->setInfo(
    Info::create()
        ->setTitle($api->getName())
//        ->setVersion('1.0.0')
//        ->setLicense(
//            License::create()
//                ->setName('MIT')
//        )
)

    ->setHost('')
    ->setBasePath('/api.xro')
    ->addScheme('https')

    ->setConsumes(['text/xml'])
    ->setProduces(['text/xml']);


$definitions = Definitions::create();

foreach ($accounting_api->getModels() as $model) {

    $properties = Properties::create();


    foreach($model->getProperties() as $property_name => $property){
        $properties->set($property_name, Schema::create()
            ->setType($property->getType())
        );
    }
//    ->set('code', Schema::create()
//        ->setType('integer')
//        ->setFormat('int32')
//    )
//        ->set('error', Schema::create()
//            ->setType('string')
//        )

    $definitions->set($model->getName(),
        Schema::create()
//            ->addRequired('code')
//            ->addRequired('message')
            ->setProperties($properties)
    );


}

$swagger->setDefinitions($definitions);
print_r(json_encode($swagger, JSON_PRETTY_PRINT));